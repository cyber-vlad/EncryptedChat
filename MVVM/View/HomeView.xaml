<UserControl x:Class="EncryptedChatApp.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncryptedChatApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label 
               Content="Please select algorithm, then enter your plaintext below"
               Foreground="white"
               FontSize="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               />
        <Label x:Name="DefaultMsg" 
               Content=""
               Foreground="yellow"
               FontSize="15"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" Margin="0,47,0,0"
       />
    </Grid>
    
</UserControl>
